[module/arch]
; 
content = %{F#FB4934}%{F-}%{A1:gnome-tweaks:} Arch Linux%{A}
;content = %{A1:firefox:}%{A1:chromium:}This opens chromium%{A} and this one firefox%{A}
type = custom/text


; =================================================
; i3 THINGS
; =================================================

[module/i3]
; Only show workspaces on the same output as the bar
; focused = Active workspace on focused monitor
; urgent = Workspace with urgency hint set
;#F87060
format = <label-state> <label-mode>
index-sort = true
label-focused = %name%
label-foreground = ${colors.gray}
label-focused-foreground = ${colors.foreground}
label-unfocused-foreground = ${colors.gray}
label-focused-padding = 2
label-mode-padding = 5
label-unfocused = %name%
label-unfocused-padding = 2
label-urgent = %name%
label-urgent-padding = 2
label-visible = %index%
pin-workspaces = true
reverse-scroll = true
type = internal/i3
unfocused = Inactive workspace on any monitor
visible = Active workspace on unfocused monitor
wrapping-scroll = false


; =================================================
; SEPERATOR
; =================================================
[module/separator]
type = custom/text
content = |
content-foreground = ${colors.red}


; =================================================
; MACHINE COMPONENT
; =================================================

[module/filesystem]
interval = 25
label-mounted = %{F#FFFFFF}%mountpoint%%{F-}%{F#FFFFFF}:%{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-mounted-foreground = ${colors.foreground}
mount-0 = /
type = internal/fs

[module/cpu]
format-prefix = ": "
interval = 2
label = %{A1:gnome-system-monitor &:}%percentage: %%{A}
type = internal/cpu
format-prefix-foreground = ${colors.magenta}
format-foreground = ${colors.foreground}

[module/memory]
format-prefix = "mem: "
interval = 2
label = %{A1:gnome-system-monitor &:}%percentage_used%%{A}
type = internal/memory
format-prefix-foreground = ${colors.green}
format-foreground = ${colors.foreground}


; =================================================
; WIFI
; =================================================

[module/wifi]
format-connected = <ramp-signal> <label-connected>
interface = wlp3s0
interval = 3.0
label-connected = %{A1:gnome-control-center wifi &:}%essid%%{A}
label-disconnected = %{A1:gnome-control-center wifi &:}no-wifi%{A}
format-connected-underline = ${colors.foreground}
format-prefix-foreground = ${colors.yellow}


ramp-signal-0 = "睊:"
ramp-signal-1 = "wifi:"
ramp-signal-2 = "wifi:"
ramp-signal-3 = "wifi:"
ramp-signal-4 = "wifi:"
ramp-signal-foreground = ${colors.teal}
type = internal/network


; =================================================
; ETHERNET
; =================================================

[module/eth]
format-connected-prefix = "  "
format-connected-underline = #55aa55
format-disconnected = no-connection(eth)
interface = eno1
interval = 3.0
label-connected = %local_ip%
type = internal/network


; =================================================
; CALENDAR | DATE
; =================================================

[module/calendar]
click-left = ~/utils/calendar-popup.sh --popup &
exec = ~/utils/calendar-popup.sh
interval = 5
type = custom/script
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-prefix-foreground = ${colors.blue}


; =================================================
; AUDIO | AUDIO
; =================================================

[module/pulseaudio]
bar-volume-empty = -
bar-volume-empty-font = 2
bar-volume-fill = -
bar-volume-fill-font = 2
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-width = 10
format-volume = <label-volume> <bar-volume>
label-muted = 🔇 muted
label-muted-foreground = #666
format-volume-prefix = " "
label-volume = %percentage%%
label-volume-foreground = ${root.blue}
format-volume-prefix-foreground = ${colors.blue}
type = internal/pulseaudio


; =================================================
; LIGHT | BRIGHTNESS
; =================================================

[module/backlight]
exec = ~/utils/backlight.sh
format-padding = 1
format-prefix = " "
interval = 0.2
label = %output%
label-foreground = ${colors.fg}
scroll-down = exec light -U 5
scroll-up = exec light -A 5
type = custom/script
format-prefix-foreground = ${colors.yellow}


; =================================================
; POWER (REBOOT, RESTART, ETC)
; =================================================

[module/power]
type = custom/menu
expand-right = true
label-open = 
label-open-foreground = ${colors.magenta}
label-close = 
label-close-foreground = ${colors.red}
label-separator = "  "
label-separator-foreground = ${colors.red}
label-open-padding = 1
label-close-padding = 1

menu-0-0 = poweroff
menu-0-0-exec = menu-open-1
menu-1-0 = confirm
menu-1-0-exec = poweroff &
menu-1-1 = cancel
menu-1-1-exec = menu-open-0

menu-0-1 = reboot
menu-0-1-exec = menu-open-2
menu-2-0 = confirm
menu-2-0-exec = reboot &
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-0-2 = logout
menu-0-2-exec = menu-open-3
menu-3-0 = logout
menu-3-0-exec = i3-msg exit
menu-3-1 = cancel
menu-3-1-exec = menu-open-0


