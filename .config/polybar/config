; =================================================
; LIGHT | BRIGHTNESS
; =================================================

[module/backlight]
exec = ~/utils/backlight.sh
format-padding = 1
format-prefix = " "
interval = 0.2
label = %output%
label-foreground = ${colors.fg}
scroll-down = exec light -U 5
scroll-up = exec light -A 5
type = custom/script


