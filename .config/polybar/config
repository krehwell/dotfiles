; =================================================
; BAR
; =================================================

[bar/bar]
border-left-size = 10
border-right-size = 10
bottom = true
fixed-center = true
font-0 = Hack Nerd Font : size=10.5;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
height = 24
line-size = 0
module-margin-center = 3
module-margin-left = 3
modules-center = i3
modules-left = filesystem cpu memory wifi xkeyboard
modules-right = arch pulseaudio calendar power
monitor = ${env:MONITOR:}
offset-x = 0%
offset-y = 0%
padding-left = 2
padding-right = 2
radius-top = 12.0
width = 100%


; =================================================
; ARCH TEXT
; =================================================

[module/arch]
; 
content =  Arch Linux
type = custom/text


; =================================================
; i3 THINGS
; =================================================

[module/i3]
; Only show workspaces on the same output as the bar
; focused = Active workspace on focused monitor
; urgent = Workspace with urgency hint set
;#F87060
format = <label-state> <label-mode>
index-sort = true
label-focused = %name%
label-focused-foreground = #0a81f5
label-focused-padding = 2
label-mode-padding = 5
label-unfocused = %name%
label-unfocused-padding = 2
label-urgent = %name%
label-urgent-padding = 2
label-visible = %index%
pin-workspaces = true
reverse-scroll = true
type = internal/i3
unfocused = Inactive workspace on any monitor
visible = Active workspace on unfocused monitor
wrapping-scroll = false


; =================================================
; MACHINE COMPONENT
; =================================================

[module/filesystem]
interval = 25
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
mount-0 = /
type = internal/fs

[module/cpu]
format-prefix = " "
interval = 2
label = %percentage: %%
type = internal/cpu

[module/memory]
format-prefix = "mem: "
interval = 2
label = %percentage_used%%
type = internal/memory


; =================================================
; WIFI
; =================================================

[module/wifi]
format-connected = <ramp-signal> <label-connected>
interface = wlp3s0
interval = 3.0
label-connected = %{A1:gnome-control-center wifi &:}%essid%%{A}
label-disconnected = %{A1:gnome-control-center wifi &:}no-wifi%{A}
ramp-signal-0 = 睊
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
type = internal/network


; =================================================
; ETHERNET
; =================================================

[module/eth]
format-connected-prefix = "  "
format-connected-underline = #55aa55
format-disconnected = no-connection(eth)
interface = eno1
interval = 3.0
label-connected = %local_ip%
type = internal/network


; =================================================
; CALENDAR | DATE
; =================================================

[module/calendar]
