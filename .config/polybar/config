[module/my-text-label]
type = custom/text
content = Arch Linux
;

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
reverse-scroll = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

