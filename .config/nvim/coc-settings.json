{
    "coc.preferences.formatOnSaveFiletypes": ["css"],

    "pairs.enableCharacters": ["(", "[", "{", "<", "\"", "'", "`"],
    "diagnostic.checkCurrentLine": true,
    "diagnostic.warningSign": ">>",
    "diagnostic.refreshOnInsertMode": true,
    "colors.filetypes": ["*"],
    // "diagnostic.displayByAle": true,

    "prettier.arrowParens": "always",
    "prettier.jsxBracketSameLine": true,
    "prettier.printWidth": 120,
    "prettier.bracketSpacing": true,
    "prettier.tabWidth": 4,

    "javascript.suggestionActions.enabled": false,
    "javascript.showUnused": false,

    "typescript.suggestionActions.enabled": false,
    "typescript.showUnused": false,

    "tsserver.npm": "/usr/bin/npm",
    "tsserver.reportStyleChecksAsWarnings": true,
    "tsserver.implicitProjectConfig.checkJs": false,

    "eslint.enable": true,
    "eslint.autoFixOnSave": false,
    "eslint.filetypes": [
        "javascript",
        "typescript",
        "typescriptreact",
        "javascriptreact"
    ],
    "eslint.options": {
        "env": {
            "browser": true,
            "node": true
        }
    },

