{
    "coc.preferences.formatOnSaveFiletypes": ["css"],
    "pairs.enableCharacters": ["(", "[", "{", "<", "\"", "'", "`"],
    "diagnostic.checkCurrentLine": true,
    "diagnostic.warningSign": ">>",
    "diagnostic.refreshOnInsertMode": true,

    "prettier.arrowParens": "always",
    "prettier.jsxBracketSameLine": true,
    "prettier.printWidth": 120,
    "prettier.bracketSpacing": true,
    "prettier.tabWidth": 4,

    "javascript.suggestionActions.enabled": false,

    "tsserver.npm": "/usr/bin/npm",
    "tsserver.reportStyleChecksAsWarnings": true,
    "tsserver.implicitProjectConfig.checkJs": false,

    "eslint.enable": false,
    "eslint.autoFixOnSave": false,
    "eslint.filetypes": [
        "javascript",
        "typescript",
        "typescriptreact",
        "javascriptreact"
    ],
    "eslint.options": {
        "env": {
            "browser": true,
            "node": true
        }
    },

    "yank.highlight.enable": false,
    "cSpell.userWords": [
      "Alacritty",
      "Autoload",
      "Consolas",
      "Fastify",
      "Knowt",
      "Mixpanel",
      "Objs",
      "PPTs",
      "Photoshop",
      "Roboto",
      "Tahoma",
      "Unauth",
      "Verdana",
      "Walkthrough",
      "bgcolor",
      "boomify",
      "callsign",
      "couchbase",
      "crossorigin",
      "dickbutt",
      "firestore",
      "flexbox",
      "graphiql",
      "gruvbox",
      "haha",
      "krehwell",
      "minmax",
      "mygroup",
      "noreferrer",
      "overscroll",
      "smtg",
      "spacebar",
      "spacetime",
      "typebox",
      "upsert",
      "uuidv",
      "valign",
      "yakuza",
      "yuza"
    ]
}
