{
    "suggest.noselect": true,
    "suggest.enablePreselect": false,

    "colors.enable": true,
    // "pairs.enableBackspace": true,
    // "pairs.enableCharacters": ["(", "[", "{", "<", "'", "\"", "`"],

    "diagnostic.checkCurrentLine": true,
    "diagnostic.warningSign": ">>",
    "diagnostic.enableSign": false, // since we have virtualText
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.virtualText": true,
    "diagnostic.displayByAle": false,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.messageTarget": "float",

    "prettier.printWidth": 120,
    "prettier.tabWidth": 4,
    "prettier.semi": true,
    "prettier.bracketSpacing": true,
    "prettier.bracketSameLine": true,
    "prettier.arrowParens": "avoid",

    "javascript.suggestionActions.enabled": false,
    "javascript.showUnused": false,
    "javascript.implementationsCodeLens.enabled": true,

    "typescript.suggestionActions.enabled": false,
    "typescript.showUnused": false,
    "typescript.implementationsCodeLens.enabled": true,
    "typescript.suggest.completeFunctionCalls": false,
    "typescript.preferences.autoImportFileExcludePatterns": ["node_modules/@*"],
    "typescript.suggest.autoImports": false,

    // "tsserver.reportStyleChecksAsWarnings": true,
    // "tsserver.enableJavascript": true,
    // "tsserver.implicitProjectConfig.checkJs": false,
    // "tsserver.disableAutomaticTypeAcquisition": true,
    "tsserver.useSyntaxServer": "auto", // performance matter
    "tsserver.maxTsServerMemory": 6000, // performance matter
    "tsserver.log": "off", // performance matter
    "tsserver.trace.server": "off", // performance matter
    "tsserver.enableTracing": false, // performance matter

    "importCost.typescriptExtensions": ["\\.tsx?$"],
    "importCost.javascriptExtensions": ["\\.jsx?$"],
    "importCost.bundleSizeDecoration": "both",
    "importCost.showCalculatingDecoration": true,
    "importCost.debug": false,

    "codeLens.enable": true,
    "eslint.enable": true,
    "eslint.autoFixOnSave": false,

    "cSpell.userWords": [
