{
    "coc.preferences.formatOnSaveFiletypes": ["css"],

    "suggest.noselect": true,
    "suggest.enablePreselect": false,

    "colors.enable": true,
    "pairs.enableCharacters": ["(", "[", "{", "<", "\"", "'", "`"],

    "diagnostic.checkCurrentLine": true,
    "diagnostic.warningSign": ">>",
    "diagnostic.refreshOnInsertMode": false,
    // "diagnostic.displayByAle": false,

    // "prettier.arrowParens": "always",
    // "prettier.jsxBracketSameLine": true,
    "prettier.printWidth": 120,
    "prettier.bracketSpacing": true,
    "prettier.tabWidth": 4,

    "javascript.suggestionActions.enabled": true,
    "javascript.showUnused": true,
    "javascript.suggest.completeJSDocs": true,
    // "javascript.implementationsCodeLens.enable": true,

    "typescript.suggestionActions.enabled": true,
    "typescript.showUnused": true,
    "typescript.suggest.completeJSDocs": true,
    // "typescript.implementationsCodeLens.enable": true,

    "tsserver.reportStyleChecksAsWarnings": true,
    // "tsserver.enableJavascript": true,
    "tsserver.implicitProjectConfig.checkJs": true,
    "tsserver.disableAutomaticTypeAcquisition": true,
    "tsserver.useSyntaxServer": "auto", // performance matter
    "tsserver.log": "off", // performance matter
    "tsserver.trace.server": "off", // performance matter
    "tsserver.maxTsServerMemory": 5000, // performance matter
    "tsserver.enableTracing": false, // performance matter

    "eslint.enable": true,
    "eslint.autoFixOnSave": false,

    // "codeLens.enable": false,

